@model IEnumerable<PublicacaoResponseModel>

<style>
    /* Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 40px;
    }

    .publication-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .publication-card {
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
        cursor: pointer;
    }

        .publication-card:hover {
            transform: translateY(-10px);
        }

        .publication-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .card-content {
        padding: 20px;
    }

    .tag {
        background-color: #1d1f21;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.8rem;
        display: inline-block;
        margin-bottom: 10px;
    }

    h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: #2a2a2a;
    }

    .publication-description {
        font-size: 0.9rem;
        color: #666;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
    }

</style>

<body>
    <div class="container">
        <h1>BlogSharp</h1>
        <div class="publication-grid">
            @{
                foreach(var item in Model)
                {
                    <div class="publication-card" data-id="@item.Id">
                        @if (!string.IsNullOrEmpty(item.Imagem))
                        {
                            <img src="~/imagens/@item.Imagem" alt="Imagem Publicação">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/300x200" alt="Imagem Publicação">
                        }
                        <div class="card-content">
                            <h2>@Html.DisplayFor(moldeItem => item.Titulo)</h2>
                            <p>Autor: @Html.DisplayFor(moldeItem => item.Autor.Email)</p>
                            <p class="publication-description">@Html.DisplayFor(moldeItem => item.Descricao)</p>
                            <span>@Html.DisplayFor(moldeItem => item.DataPublicacao.Value.Date)</span>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>

<script>
    document.querySelectorAll('.publication-card').forEach(card => {
        card.addEventListener('click', function () {
            const id = this.getAttribute('data-id');
            if (id) {
                window.location.href = `/Publicacoes/Details/${id}`;
            }
        });
    });
</script>